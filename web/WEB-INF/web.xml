        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>baoph.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>baoph.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>baoph.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet>
