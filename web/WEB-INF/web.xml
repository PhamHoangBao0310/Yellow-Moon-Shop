<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>baoph.filter.FilterDispatcher</filter-class>
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>baoph.filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>baoph.filter.UserFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>baoph.filter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ExistUserFilter</filter-name>
        <filter-class>baoph.filter.ExistUserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ExistUserFilter</filter-name>
        <url-pattern>/trackOrder</url-pattern>
        <url-pattern>/searchOrder</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/letLogin</url-pattern>
        <url-pattern>/</url-pattern>
        <url-pattern>/login</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/adminHome</url-pattern>
        <url-pattern>/edit</url-pattern>
        <url-pattern>/editPage</url-pattern>
        <url-pattern>/view</url-pattern>
        <url-pattern>/create</url-pattern>
        <url-pattern>/createCake</url-pattern>
        <url-pattern>/viewUser</url-pattern>
        <url-pattern>/showUser</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/userHome</url-pattern>
        <url-pattern>/addToCart</url-pattern>
        <url-pattern>/cart</url-pattern>
        <url-pattern>/viewCart</url-pattern>
        <url-pattern>/remove</url-pattern>
        <url-pattern>/updateQuantity</url-pattern>
        <url-pattern>/CheckOutNow</url-pattern>
        <url-pattern>/checkout</url-pattern>
        <url-pattern>/trackOrder</url-pattern>
        <url-pattern>/searchOrder</url-pattern>
        <url-pattern>/login-google</url-pattern>
        <url-pattern>/authorize_payment</url-pattern>
        <url-pattern>/review_payment</url-pattern>
        <url-pattern>/reviewPaypal</url-pattern>
        <url-pattern>/execute_payment</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>baoph.listener.MyContextListener</listener-class>
    </listener>
    <listener>
        <description>HttpSessionListener</description>
        <listener-class>baoph.listener.MySessionListener</listener-class>
    </listener>
